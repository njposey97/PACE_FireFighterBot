void move_straight()
{
  digitalWrite(8, HIGH);
  digitalWrite(7, LOW);
  //Control Speed
  analogWrite(9, 80);
  delay(1000);
}

void move_backward()
{
  digitalWrite(8, LOW);
  digitalWrite(7, HIGH);
  //copntrol Speed
  analogWrite(9, 80); //pin 9 pulse modulation (variable speed)
  delay(1000);
}

void turn_left()
{
    Robot.turn(-90); //make bot turn 90 degrees left
    delay(1000);
}

void turn_right()
{
    Robot.turn(90); //make bot turn 90 degrees right
    delay(1000);
}

void turn_180()
{
    Robot.turn(180); //make bot turn 180 degrees right
    delay(1000);
}
